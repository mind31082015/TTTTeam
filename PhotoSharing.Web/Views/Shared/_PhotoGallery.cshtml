@model IEnumerable<PhotoSharing.Web.Models.Photo>

@{ 
    Layout = null;
}

<div class="row">
    @foreach (var item in Model) {
    
    <div class="col-md-4">

        <!--h3 class="page-header">@Html.DisplayFor(modelItem => item.Title)</h3>-->

        <div class="thumbnail">

            @if (item.PhotoFile == null)
            {
            <img width="200px" src="">
            }
            else
            {
            <img src="@Url.Action("GetImage", new { id=item.PhotoID })">
            }
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                <p>Created by: @Html.DisplayFor(modelItem => item.UserName)</p>
                <p>Created on: @Html.DisplayFor(modelItem => item.CreatedDate)</p>
                <p><a href="@Url.Action("Display", new { id=item.PhotoID })" class="btn btn-primary" role="button">Display</a></p>
               
            </div>
        </div>
        
    </div>

    }
</div>


